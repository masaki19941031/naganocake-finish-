<div class="conrainer">
  
  <div class="row mt-4">
    <div class="row col-6">
      <p class="col-2"></p>
      <p class="col-4 fs-5 bg-light">ジャンル一覧・追加</p>
    </div>
    
    <div class="row mt-4">
      <div class="col-1"></div>
      <div class="col-5">
        <%= form_with model: @genre,url: admins_genres_path, local: true do |f| %>
          <%= f.label:name, "ジャンル名", class: "ms-5" %>
          <%= f.text_field :name, class: "ms-5", placeholder: "ジャンル名" %>
          <%= f.submit "　新規登録　", class: "btn btn-sm btn-success " %>
        <% end %>
      </div>
    </div>
    
    
    
    
    
    <div class="row">
      <div class="col-1"></div>
      <div class="col-3">
        <table class="table table-hover">
          <thead class="bg-light">
            <tr>
              <th>ジャンル</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td></td>
              <td align="right"><%= link_to "　編集する　", edit_admins_genre_path(genre), class: "btn btn-success" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @genres %>
      </div>
    </div>
  </div>
</div>