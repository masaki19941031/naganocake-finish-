<div class="conrainer">
  
  <div class="row mt-4">
    <div class="row col-6">
      <p class="col-2"></p>
      <p class="col-3 fs-5 bg-light">ジャンル編集</p>
    </div>
    
    <div class="row mt-4">
      <div class="col-1"></div>
      <div class="col-5">
        <%= form_with(model: @genre, url: admins_genre_path(@genre), local: true) do |f| %>
          <%= f.label:name, "ジャンル名", class: "ms-5" %>
          <%= f.text_field :name, class: "ms-5" %>
          <%= f.submit "　変更を保存　", class: "btn btn-sm btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

