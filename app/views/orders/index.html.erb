<div class='container px-5 px-sm-0 orders_index'>
  <div class='row'>
    <div class='col-md-7'></div>
    <div class='col-md-11 offset-md-1'>
      <p class="col-2 fs-5 bg-light text-center">注文履歴一覧</p>
    　<table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
              <td>〒<%= order.postal_code %><br><%= order.address %><br><%= order.name %></td>
              <td>
                <% order.order_details.each do |order_detail| %>  
                  <p class="m-0 lh-lg"><%= order_detail.item.name %></p>
                <% end %>
              </td>
              <td><%= order.total_payment %> </td>
              <td><%= order.status %></td>
              <td><%= link_to "表示する", order_path(order), class: "btn btn-success btn-sm offset-1" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @orders %>
    </div>
  </div>
</div>