<div class="container order-index">
  <div class="row mt-4">
    <div class="row col-8">
      <p class="col-2"></p>
      <p class="col-4 fs-5 bg-light text-center">注文履歴一覧</p>
    </div>

    <div class="row col-8 mx-auto">
      <table class='table table-hover table-inverse '>
        <thead class="bg-light">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.created_at.strftime('%Y/%m/%d　%H:%M:%S'),admins_order_path(order) %></td>
            <td><%= order.name %></td>
            <td>
                <%= order.order_details.sum(:amount) %>

            </td>
            <td><%= order.status %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <%= paginate @orders %>
    </div>
    </div>
  </div>
</div>