<div class="container">
  <p class="fs-3 mt-3 ms-4">商品編集</p>
  <div class="row">
  <%= form_with(model: @item,url: admins_item_path(@item), local: true)  do |f| %>
  
    <div class="row">
      <div class="col-3"></div>
      <div class="col-2 fs-5">商品画像</div>
      <div class="col-5"><%= f.attachment_field :image %></div>
    </div>
    
    <div class=" row mt-3">
      <div class="col-3"></div>
      <div class="col-2 fs-5"><%= f.label :name, "商品名" %></div>
      <div class="col-5"><%= f.text_field :name,  size: 39%>
    </div>
    
    <div class="row mt-3">
      <div class="col-3"></div>
      <div class="col-2 fs-5"><%= f.label :introduction, "商品説明" %></div>
      <div class="col-5"><%= f.text_area :introduction,  size: "41x7" %></div>
    </div>
    
     <div class="row mt-3">
       <div class="col-3"></div>
       <div class="col-2 fs-5"><%= f.label:genres, "ジャンル" %></div>
       <div class="col-5"><%= f.collection_select(:genre_id, @genres, :id, :name) %></div>
     </div>
     
     <div class="row mt-3">
       <div class="col-3"></div>
       <div class="col-2 fs-5"><%=f.label :price, "税抜価格" %></div>
       <div class="col-5"><%= f.text_field :price,  size: 39 %><span>円</span></div>
    </div>
    
    <div class="row mt-3">
      <div class="col-3"></div>
      <div class="col-2 fs-5"><%=f.label:"販売ステータス" %></div>
      <div  class="col-1">
        <%= f.radio_button :is_active, "販売中",checked: true %>
        <%= f.label :is_active, "販売中", value: :true %>
      </div>
      <div  class="col-2">
        <%= f.radio_button :is_active, :false %>
        <%= f.label :is_active, "販売停止中",value: :false %>
      </div>
    </div>
    
    <div class="d-grid gap-2 col-2 mx-auto mt-3">
      <%= f.submit "変更を保存", class: "btn btn-sm btn-success" %>
    </div>
   
  <% end %>
  </div>
</div>




