<div class="container customer-index">
  <div class="row mt-4">
    <div class="row col-8">
      <p class="col-2"></p>
      <p class="col-3 fs-5 bg-light text-center">会員一覧</p>
    </div>

    <div class="row col-8 mx-auto">
      <table class='table table-hover table-inverse '>
        <thead class="bg-light">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr valign="middle" class="lh-lg">
              <td><%= customer.id %></td>
              <td><%= link_to customer.last_name + "" + customer.first_name,admins_customer_path(customer.id),:style => "color: black;text-decoration: underline" %></td>
              <td><%= customer.email %></td>
              <% if customer.is_deleted == true%>
              <td class="fw-light" style="color: gray">退会</td>
              <% else %>
              <td class="fw-bold" style="color:green">有効</td>
              <% end %>
            </tr>
          <% end %>
          <%= paginate @customers %>
        </tbody>
      </table>
    </div>
    </div>
  </div>
</div>